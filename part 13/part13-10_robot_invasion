# WRITE YOUR SOLUTION HERE:
from random import randint, choice
import pygame

pygame.init()
w_width = 640
w_height = 480
window = pygame.display.set_mode((w_width, w_height))
robot = pygame.image.load("src/robot.png")
width = robot.get_width()
height = robot.get_height()
window.fill((0, 0, 0))


velocity_x = 0
velocity_y = 1
clock = pygame.time.Clock()
number = 20
# create 20 diffrents x position of robot
robots = []
for i in range(number):
    x = randint(0, w_width-width)
    y = height
    direction = choice(["left", "right"])
    robots.append((x, y, direction))

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            exit()
    window.fill((0, 0, 0))

    for i, (x, y, direction) in enumerate(robots):
        if y + height < 480:
            y += 1
        else:
            if x < -width or x > w_width:
                x = randint(0, w_width - width)
                y = -randint(100, 1000)

            if direction == "left":
                x += -1
            elif direction == "right":
                x += 1
        robots[i] = (x, y, direction)

    for x, y, _ in robots:
        window.blit(robot, (x, y))
    pygame.display.flip()
    clock.tick(60)
